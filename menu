#include<iostream>
using namespace std; 
int main( ){
	int n(0),choix(0);
	do{
		cout<<"Nombre="<<n<<endl;
		cout<<"   Menu:  "<<endl;
		cout<<" 1.Ajouter 1"<<endl;
		cout<<" 2.Multiplier par 2"<<endl;		cout<<" 3.Soustraire 4"<<endl;
		cout<<" 4.Quitter"<<endl;
		cout<<"Entrez une valeur entre 1et 3"<<endl;
		cin>>choix;
		switch(choix){
			case 1:
			cout<<"la nouvelle valeur de n est:"<<n+1;break;
			case 2:
			cout<<"la nouvelle valeur de n est:"<<2*n;break;
			case 3:
			cout<<"la nouvelle valeure de n est:"<<n-4;break;
			case 4:
			cout<<"     ";
			default: 
			cout<<"ereur de choix";
		}while(choix!=4);
	}
